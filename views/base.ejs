
    <%- include('header')-%>


     


    <div class="text-center center-div" id="login">
        <div class="container w-25 border py-5">
            <div class="title pb-5">
                <h2 class="font-weight-bold">Login System</h2>
                <span>Log in for the existing user</span>
                <% if(locals.isLogout){%>
                    <div class="alter alert-success text-white text-center">
                        Logout successfully...!
                    </div>
                    <%} %>
            </div>
            <form action="/route/login" method="POST" class="pt-3"> 
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="email" name="email" required>
                    <small class="form-text text-left text-white">Register email address</small>
                </div>
                <div  class="form-group">   
                    <input type="password" class="form-control" name="password" placeholder="password" required>
                </div>
                <button type="submit" class="btn btn-success rounded-pill mt-5">Submit</button>
            </form>
           
            <p class="text-danger"><%= locals.error ? locals.error : '' %></p>

        </div>
    </div>

    
    
    <%- include('footer')-%>   









